{
  "name": "@lalit-rana/middle-ellipsis-react",
  "version": "0.0.9",
  "description": "Provides a function to truncate text in the middle with an ellipsis",
  "type": "module",
  "scripts": {
    "build": "npm run remove:all && npm run build:all",
    "update-import-paths": "sed -i 's#../truncate-text#./truncate-text#g' ./dist/**/*.*",
    "remove:all": "rm -rf dist",
    "build:all": "mkdir dist && npm run build:React:TS && npm run build:Vanilla:TS && npm run update-import-paths",
    "build:React:TS": "cp -r src/React dist/React-TS/ & cp -r src/truncate-text/ dist/React-TS//truncate-text",
    "build:Vanilla:TS": "cp -r src/truncate-text/ dist/Vanilla-TS/",
    "build:React:JS": "tsup src/* --format cjs --minify --out-dir React"
  },
  "bin": "./bin.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LalitSinghRana/text-middle-ellipsis.git"
  },
  "keywords": [
    "text",
    "ellipsis",
    "truncate",
    "middle",
    "center",
    "ellipsis-middle",
    "ellipsis-center",
    "text-middle-ellipsis"
  ],
  "author": "Lalit Rana",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "decompress": "^4.2.1",
    "download": "^8.0.0",
    "inquirer": "^9.2.15",
    "nanospinner": "^1.1.0",
    "react": "^18.2.0"
  }
}
